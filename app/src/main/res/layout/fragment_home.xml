<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    xmlns:charlotte="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_height="match_parent">
    <include layout="@layout/common_title"/>

    <com.example.administrator.p2pinvest.ui.MyScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:overScrollMode="never"
        >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center_horizontal"
                >
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="150dp"
                >
                <android.support.v4.view.ViewPager
                    android:id="@+id/view_pager"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    >
                </android.support.v4.view.ViewPager>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_gravity="bottom|center_horizontal"
                    android:layout_marginBottom="5dp"
                    android:id="@+id/ll_point"
                    />

            </FrameLayout>

            <TextView
                android:id="@+id/tv_home_product"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="借贷还款第一期！免手续费"
                android:textSize="20sp"
                android:drawablePadding="4dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:drawableRight="@drawable/recommend"
                android:textColor="#666666"
                />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginLeft="40dp"
                    android:layout_marginRight="40dp"
                    >
                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="本息保障"
                        android:gravity="center"
                        android:layout_marginLeft="2dp"
                        android:background="@drawable/home_attribute_bg"
                        />
                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_marginLeft="2dp"
                        android:layout_height="wrap_content"
                        android:text="每日计划"
                        android:gravity="center"
                        android:background="@drawable/home_attribute_bg"
                        />
                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="2dp"
                        android:text="高额收益"
                        android:gravity="center"
                        android:background="@drawable/home_attribute_bg"
                        />



                </LinearLayout>

                   <com.example.administrator.p2pinvest.ui.RoundProgress
                       android:layout_width="120dp"
                       android:layout_height="120dp"
                       android:id="@+id/roundPro_home"
                       android:layout_marginTop="8dp"
                       charlotte:max="100"
                       charlotte:roundColor="#796d6d"
                       charlotte:roundProgressColor="#df4141"
                       charlotte:progress="10"
                       charlotte:roundWidth="10dp"
                       charlotte:textColor="#000"
                       charlotte:textSize="20sp"
                       />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:text="预期年利率："
                    android:textColor="#666666"
                    />

                <TextView
                    android:id="@+id/tv_home_year_rate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="10% + 2%"
                    android:textColor="#666666"
                    />
                </LinearLayout>

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:background="@drawable/home"
                    android:layout_marginTop="10dp"
                    android:text="立即加入"
                    android:textSize="30sp"
                    android:textColor="#fff"
                    android:id="@+id/join_immediately"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="风险保障金由GeekTeam提供"
                    android:layout_marginTop="10dp"
                    android:drawableLeft="@drawable/guarantee_icon"
                    />
            </LinearLayout>
    </com.example.administrator.p2pinvest.ui.MyScrollView>

</LinearLayout>